@model IEnumerable<BeSpokedBike.Models.Products>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Products", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name:")
        </th>
        <th>
            @Html.DisplayName("Manufacturer:")
        </th>
        <th>
            @Html.DisplayName("Style:")
        </th>
        <th>
            @Html.DisplayName("Purchase Price:")
        </th>
        <th>
            @Html.DisplayName("Sale Price:")
        </th>
        <th>
            @Html.DisplayName("Qty On Hand:")
        </th>
        <th>
            @Html.DisplayName("Commission Percentage:")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Style)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PurchasePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalePrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtyOnHand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommissionPercentage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductsID }) @*|
            @Html.ActionLink("Details", "Details", new { id=item.ProductsID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductsID })*@
        </td>
    </tr>
}

</table>
